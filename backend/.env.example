# Server Configuration
PORT=3001

# CORS Configuration
# Set to your frontend domain(s) or "*" for all origins
# Example: https://heira.sbotto.com or https://heira.sbotto.com,https://www.heira.sbotto.com
CORS_ORIGIN=*

# Private key for signing transactions (keeper service and contract interactions)
# This should be the same wallet used for contract deployment
PRIVATE_KEY=your_private_key_here

# Enable keeper service in the main API server
# Set to 'true' to run keeper alongside API, or use 'npm run start:keeper' for standalone
ENABLE_KEEPER=false

# Factory Addresses (same as frontend)
# These determine which networks the keeper will monitor
FACTORY_ADDRESS_ETHEREUM=
FACTORY_ADDRESS_BASE=
FACTORY_ADDRESS_CITREA=

# Keeper check interval in milliseconds (default: 300000 = 5 minutes)
KEEPER_CHECK_INTERVAL_MS=300000

# RPC URLs for contract verification and keeper service
SEPOLIA_RPC_URL=https://rpc.sepolia.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org
MAINNET_RPC_URL=https://eth.llamarpc.com
BASE_RPC_URL=https://mainnet.base.org
CITREA_RPC_URL=https://rpc.testnet.citrea.xyz

# API Keys
ETHERSCAN_API_KEY=your_etherscan_api_key
ONEINCH_API_KEY=your_ONEINCH_API_KEY

# MailPace Configuration (for email notifications)
MAILPACE_API_TOKEN=your_mailpace_api_token
MAILPACE_FROM_EMAIL=your_email@example.com
