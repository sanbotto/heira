{
  "name": "heira-backend",
  "version": "1.0.0",
  "description": "Heira backend API and keeper service",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:keeper": "tsx watch src/services/keeper-cli.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:keeper": "node dist/services/keeper-cli.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'"
  },
  "keywords": [
    "heira",
    "backend",
    "api",
    "keeper"
  ],
  "author": "",
  "license": "AGPL-3.0",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ethers": "^6.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3"
  }
}
